{% extends 'base.html.twig' %}

{% block title %}Modifier profil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style-edit-profile.css') }}">
    <link rel="icon" href="img/logo/favicon-fridge.svg" type="image/x-icon">
{% endblock %}

{% block body %}

    <main class="content">
        <section class="banner">
            <div class="banner-content">
                <img src="img/profilePicture.jpg" alt="photo de profil" class="banner-profile-picture">
                <h1 class="banner-profile-identity">
                    <span id="profile-firstname">Pr√©nom</span>
                    <span id="profile-lastname">Nom</span>
                </h1>
            </div>
        </section>
        <section class="edit-profile-area">
            {{ form_start(updateForm) }}
                {{ form_row(updateForm.firstname) }}
                {{ form_row(updateForm.lastname) }}
                {{ form_row(updateForm.email) }}
                {{ form_row(updateForm.plainPassword) }}
                <button type="submit" class="submit-profile-informations">Valider</button>
            {{ form_end(updateForm) }}
            <form class="edit-profile-picture-form" method="post">
                <div class="profile-picture-input-area">
                    <div class="input-picture-button-area">
                        <label class="input-picture-button">
                            Nouvelle image
                            <input type="file" name="profilePicture" id="profilePicture"
                                   class="profile-picture-input">
                        </label>
                    </div>
                </div>
            </form>
        </section>
    </main>



{% endblock %}